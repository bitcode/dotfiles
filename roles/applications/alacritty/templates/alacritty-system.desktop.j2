[Desktop Entry]
Type=Application
TryExec=alacritty-wrapper
Exec=/usr/local/bin/alacritty-wrapper
Icon=Alacritty
Terminal=false
Categories=System;TerminalEmulator;
Name=Alacritty
GenericName=Terminal Emulator
Comment=GPU-optimized terminal emulator with automatic shell configuration
StartupWMClass=Alacritty
Actions=New;

# GPU Configuration Info
# System: {{ ansible_hostname }}
