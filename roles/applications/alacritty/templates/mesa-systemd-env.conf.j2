# Systemd User Service Environment Override for Alacritty
# Auto-generated by Ansible for {{ ansible_hostname }}
# 
# This file ensures that systemd user services (including desktop applications)
# have the correct MESA environment variables set.

[Service]
{% if alacritty_gpu_config.mesa_loader_override %}
Environment="MESA_LOADER_DRIVER_OVERRIDE={{ alacritty_gpu_config.mesa_loader_override }}"
{% endif %}
{% if (gpu_info.count | int) > 1 %}
Environment="MESA_SHADER_CACHE_DISABLE=1"
{% endif %}
Environment="XDG_CONFIG_HOME={{ ansible_user_dir }}/.config"
Environment="HOME={{ ansible_user_dir }}"
